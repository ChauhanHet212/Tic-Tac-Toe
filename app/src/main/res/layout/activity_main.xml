<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="480dp"
        android:alpha="0.3"
        android:text="O"
        android:textColor="@color/blue"
        android:textSize="300sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="440dp"
        android:alpha="0.3"
        android:text="X"
        android:textColor="@color/red"
        android:textSize="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Tic "
                android:textColor="@color/red"
                android:textSize="70sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Tac "
                android:textColor="@color/black"
                android:textSize="70sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Toe "
                android:textColor="@color/blue"
                android:textSize="70sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/cpubtn"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_computer_24"
            android:drawableTint="@color/white"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Player Vs CPU"
            android:textSize="23sp"
            android:paddingVertical="15dp"
            app:backgroundTint="@null"
            android:background="@drawable/btn_bg"/>

        <Button
            android:id="@+id/playerbtn"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_people_24"
            android:drawableTint="@color/white"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="PLayer Vs Player"
            android:textSize="23sp"
            android:paddingVertical="15dp"
            app:backgroundTint="@null"
            android:background="@drawable/btn_bg"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>